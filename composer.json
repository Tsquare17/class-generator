{
    "name": "tsquare/file-generator",
    "description": "Generate files from template config files.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Trevor Thompson",
            "email": "trevor@trevomail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Tsquare\\FileGenerator\\": "src/"
        }
    },
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^6.5"
    },
    "scripts": {
        "sniff": "phpcs -p --colors --standard=phpcs.xml",
        "check": "composer sniff && composer test",
        "test": "vendor/bin/phpunit --colors=always --testsuite unit"
    }
}
